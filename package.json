{
  "name": "natours",
  "version": "1.0.0",
  "description": "Landing page of natours",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",

    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/style.comp.css css/icon-font.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css concat:css prefix:css compress:css"
  },
  "keywords": [
    "natours"
  ],
  "author": "DutraNeto <dutraneto@me.com> (http://dutraneto.github.io/)",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^8.6.5",
    "concat": "^1.0.3",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^5.0.1"
  }
}
